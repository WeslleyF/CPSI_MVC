@model CPSI.Negocio.Modelo.Disciplina

@{
    ViewData["Title"] = "Editar Disciplina";
}


<h4>Editar Disciplinas</h4>
<hr />
<div class="row">
    <div class="col s4">
        <form asp-action="Editar" method="post" asp-route-id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class=""></div>
            <div class="form-group">
                <label asp-for="Nome" class=""></label>
                <input asp-for="Nome" class="" />
                <span asp-validation-for="Nome" class=""></span>
            </div>
            <div class="">
                <input type="submit" value="Salvar" class="btn" />
                <a class="btn" asp-action="Listar">Voltar a Listagem</a>
            </div>
        </form>
    </div>
</div>