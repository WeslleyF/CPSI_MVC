<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/materialize/css/materialize.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>

    <nav class="light-blue darken-1">
        <div class="nav-wrapper container">
            <a asp-action="Modulos" asp-controller="Inicial" class="brand-logo">Educar</a>
            <ul class="right">
                <partial name="_LoginPartial" />
            </ul>
            <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
            <ul class="right hide-on-med-and-down">
                <li><a asp-area="Diretor" asp-controller="Disciplinas" asp-action="Listar">Disciplinas</a></li>
                <li><a asp-area="Diretor" asp-controller="Turmas" asp-action="Listar">Turmas</a></li>
            </ul>
        </div>
    </nav>

    <ul class="sidenav" id="mobile-demo">
        <li><a asp-area="Diretor" asp-controller="Disciplinas" asp-action="Listar">Disciplinas</a></li>
    </ul>

    <div class="container">
        <div class="row">
            <div class="col s12">
                @RenderBody()
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/lib/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="~/lib/materialize/js/materialize.js"></script>
    <script type="text/javascript" src="~/js/Diretor.js"></script>
</body>
</html>
