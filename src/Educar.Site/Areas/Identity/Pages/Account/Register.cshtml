@page 
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<div class="container">
    <div class="row">
        <div class="col s6">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                
                <h4>Crie um novo usuário</h4>
                
                <div asp-validation-summary="All" class=""></div>
                <div class="">
                    <label asp-for="Input.Usuario"></label>
                    <input asp-for="Input.Usuario" class="" />
                    <span asp-validation-for="Input.Usuario" class=""></span>
                </div>
                <div class="">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="" />
                    <span asp-validation-for="Input.Email" class=""></span>
                </div>
                <div class="">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="" />
                    <span asp-validation-for="Input.Password" class=""></span>
                </div>
                <div class="">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="" />
                    <span asp-validation-for="Input.ConfirmPassword" class=""></span>
                </div>
                <br/>
                <button type="submit" class="btn">Registrar</button>
            </form>
            <br/>
        </div>
    </div>

</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
