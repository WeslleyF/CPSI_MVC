@page
@model LoginModel

@{
    ViewData["Title"] = "Entrar";
}

    <div class="container">
        <div class="row">
            <div class="col s6">
                <section>
                    <form id="account" method="post">
                        <h4>Entrar na sua conta</h4>

                        <div asp-validation-summary="All" class=""></div>
                        <div class="">
                            <label asp-for="Input.Usuario"></label>
                            <input asp-for="Input.Usuario" class="" />
                            <span asp-validation-for="Input.Usuario" class=""></span>
                        </div>
                        <div class="">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="" />
                            <span asp-validation-for="Input.Password" class=""></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <button type="submit" class="btn">Entrar</button>
                        </div>

                    </form>
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />
                </section>
            </div>
        </div>

    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
